<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<div class="field">
		<%= f.label :Title %><br>
		<%= f.text_field :title %><br>
	</div>
	<div class="field">
		<%= f.label :Body %><br>
		<%= f.text_area :body %><br>
	</div>
	<div class="actions">
		<%= f.submit 'Update Book' %>
	</div>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
 | 
<%= link_to "Back", books_path %>
